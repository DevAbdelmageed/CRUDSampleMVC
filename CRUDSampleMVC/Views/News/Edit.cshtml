            </div>
            <div class="form-group">
                <label asp-for="ArabicBody" class="control-label"></label>
                <input asp-for="ArabicBody" class="form-control" />
                <span asp-validation-for="ArabicBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnglishBody" class="control-label"></label>
                <input asp-for="EnglishBody" class="form-control" />
                <span asp-validation-for="EnglishBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
